[module/temperature]
type = internal/temperature

; Seconds to sleep between updates
; Default: 1
interval = 2

; Thermal zone to use
; To list all the zone types, run 
; $ for i in /sys/class/thermal/thermal_zone*; do echo "$i: $(<$i/type)"; done
; Default: 0
thermal-zone = 0

; Threshold temperature to display warning label
; Default: 80
warn-temperature = 70

; Available tags:
;   <label> (default)
;   <ramp>
format = Ôãà <label>
format-foreground = #00C0FF

; Available tags:
;   <label-warn> (default)
;   <ramp>
format-warn = Ôãà <label-warn>
format-warn-foreground = #FF0000

; Available tokens:
;   %temperature% (default)
label = %temperature-c%

; Available tokens:
;   %temperature% (default)
label-warn = %temperature-c%

; Requires the <ramp> tag
; The icon selection will range from 0 to `warn-temperature`
; with the current temperature as index.
ramp-0 = A
ramp-1 = B
ramp-2 = C
ramp-foreground = #55


[module/date]
type = internal/date
interval = 5

date = "%a"
time = "%H:%M"

format = ÔÄó <label>
format-foreground = ${colors.primary}
label = %date%  %time%
label-foreground = ${colors.primary}


[module/powermenu]
type = custom/menu

; If true, <label-toggle> will be to the left of the menu items (default).
; If false, it will be on the right of all the items.
expand-right = true

; "menu-LEVEL-N" has the same properties as "label-NAME" with
; the additional "exec" property
;
; Available exec commands:
;   menu-open-LEVEL
;   menu-close
; Other commands will be executed using "/usr/bin/env sh -c $COMMAND"

menu-0-0 = Lock
menu-0-0-exec = i3exit lock
menu-0-0-foreground = #ffff00
menu-0-1 = Logout
menu-0-1-exec = i3exit logout
menu-0-1-foreground = #00ff00
menu-0-2 = Reboot
menu-0-2-exec = i3exit reboot
menu-0-2-foreground = #00ffff
menu-0-3 = Off
menu-0-3-exec = i3exit shutdown
menu-0-3-foreground = #6809d5

; Available tags:
;   <label-toggle> (default) - gets replaced with <label-(open|close)>
;   <menu> (default)
format = <label-toggle> <menu>

label-open = ÔÄë
label-open-foreground = #ff5555
label-close = ÔÑ∑
label-close-foreground = #ff5555

; Optional item separator
; Default: none
label-separator = |
label-separator-foreground = #ff5555

[module/wifi]
type = internal/network
interface = wlp0s20f0u12
interval = 2

; Available tags:
;   <label-connected> (default)
;   <ramp-signal>
format-connected = <label-connected>

; Available tags:
;   <label-disconnected> (default)
format-disconnected = 

; Available tokens:
;   %ifname%    [wireless+wired]
;   %local_ip%  [wireless+wired]
;   %essid%     [wireless]
;   %signal%    [wireless]
;   %upspeed%   [wireless+wired]
;   %downspeed% [wireless+wired]
;   %linkspeed% [wired]
; Default: %ifname% %local_ip%
label-connected =  ÔÅ¢%upspeed:9%     ÔÅ£%downspeed:9% 
;label-connected-foreground = #eefafafa

; Available tokens:
;   %ifname%    [wireless+wired]
; Default: (none)
label-disconnected = not connected
;label-disconnected-foreground = #66ffffff

[module/pulseaudio]
type = internal/pulseaudio

; Sink to be used, if it exists (find using `pacmd list-sinks`, name field)
; if not, use default sink
sink = alsa_output.pci-0000_00_1f.3.analog-stereo

; use PA_VOLUME_UI_MAX (~153%) if true, or PA_VOLUME_NORM (100%) if false
use-ui-max = true

; interval for volume increase/decrease (in percent points)
interval = 5

; Available tags:
;   <label-volume> (default)
;   <ramp-volume>
;   <bar-volume>
format-volume = ÔÄ® <label-volume>

; Available tags:
;   <label-muted> (default)
;   <ramp-volume>
;   <bar-volume>
;format-muted = <label-muted>

; Available tokens:
;   %percentage% (default)
;label-volume = %percentage%%

; Available tokens:
;   %percentage% (default)
label-muted = ÔÄ¶ muted
label-muted-foreground = #666

; Only applies if <ramp-volume> is used
ramp-volume-0 = üîà
ramp-volume-1 = üîâ
ramp-volume-2 = üîä


